<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".views.ui.FavoritasFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginLayoutTopBottom_FavoritasVerMasTardeYaVistas"
        android:layout_marginBottom="@dimen/marginLayoutTopBottom_FavoritasVerMasTardeYaVistas"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewFavsOrden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/marginWidgets_FavoritasVerMasTardeYaVistas"
            android:textSize="@dimen/titulos_size"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="@string/tv_Orden"/>

        <Spinner
            android:id="@+id/spinnerFavsOrden"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spinnerHeight"
            android:layout_margin="@dimen/marginWidgets_FavoritasVerMasTardeYaVistas"
            android:background="@drawable/spinner"
            android:popupBackground="@color/white" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewFavs"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>