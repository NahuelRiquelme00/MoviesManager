<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".views.ui.InicioFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewInicioFavoritas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/inicio_margin"
            android:gravity="center"
            android:text="@string/tv_InicioFavoritas"
            android:textColor="@color/white"
            android:textSize="@dimen/titulos_size"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/inicioLayoutFavoritas"
            android:layout_width="match_parent"
            android:layout_height="@dimen/poster_height"
            android:background="@color/color_principal"
            android:visibility="visible"
            android:orientation="horizontal">
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewInicioFavoritas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_principal" />

        <TextView
            android:id="@+id/textViewInicioVerMasTarde"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/inicio_margin"
            android:gravity="center"
            android:text="@string/tv_InicioVerMasTarde"
            android:textColor="@color/white"
            android:textSize="@dimen/titulos_size"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/inicioLayoutVerMasTarde"
            android:layout_width="match_parent"
            android:layout_height="@dimen/poster_height"
            android:background="@color/color_principal"
            android:visibility="visible"
            android:orientation="horizontal">
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewInicioVerMasTarde"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_principal" />

        <Button
            android:id="@+id/buttonInicioYaVistas"
            android:layout_width="@dimen/buttonWidth"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/inicio_separacionBotones"
            android:background="@drawable/button_inicio"
            android:drawableLeft="@drawable/ic_baseline_check_circle_outline_24"
            android:padding="@dimen/buttonPadding"
            android:text="@string/bt_InicioYaVistas"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/buttonInicioRecomendaciones"
            android:layout_width="@dimen/buttonWidth"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/inicio_separacionBotones"
            android:background="@drawable/button_inicio"
            android:drawableLeft="@drawable/ic_baseline_recommend_24"
            android:drawableTint="@color/white"
            android:padding="@dimen/buttonPadding"
            android:text="@string/bt_InicioRecoms"
            android:textColor="@color/white" />

    </LinearLayout>

</ScrollView>