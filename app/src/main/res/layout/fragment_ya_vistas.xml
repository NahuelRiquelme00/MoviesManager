<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".views.ui.YaVistasFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/separacion_un_layout"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewYaVistasOrden"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/altura_general_textos_spinner"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="@dimen/titulos_size"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="@string/tv_Orden"/>

        <Spinner
            android:id="@+id/spinnerYaVistasOrden"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/spinner"
            android:contentDescription="Orden"
            android:popupBackground="@color/white" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewYaVistas"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>